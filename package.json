{
  "name": "triple-backend",
  "version": "1.0.0",
  "description": "Triple tourist club mileage service",
  "main": "server.js",
  "repository": "https://github.com/gar-den/triple-backend.git",
  "author": "Garden Lee <prepella3@gmail.com>",
  "license": "UNLICENSED",
  "scripts": {
    "build": "echo 'build server...' && rimraf ./lib && tsc -b .",
    "server": "rimraf ./lib && tsc && cross-env ENV=local node lib/server.js",
    "lint": "eslint --ignore-path .eslintignore --ext .ts .",
    "db:create": "mysql -uroot -ptest -h 127.0.0.1 -e 'CREATE DATABASE IF NOT EXISTS triple DEFAULT CHARACTER SET utf8mb4;'"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "dependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.3",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "body-parser": "^1.20.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "jest": "^28.1.1",
    "mysql": "^2.18.1",
    "mysql2": "^2.3.3",
    "node-mocks-http": "^1.11.0",
    "rimraf": "^3.0.2",
    "sequelize": "6.9.0",
    "supertest": "^6.2.3",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@types/mysql": "^2.15.21",
    "@types/node": "17.0.21",
    "@types/supertest": "^2.0.12",
    "eslint": "^8.18.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "nodemon": "^2.0.18",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1"
  }
}
